<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="root" alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.propertypal.client.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="PropertyPal">
        <font>
            <Font size="48.0"/>
        </font>
    </Text>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Login">
        <font>
            <Font size="36.0"/>
        </font>
    </Text>
    <Region prefHeight="26.0" prefWidth="1240.0"/>
    <TextField fx:id="emailField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="26.0" prefWidth="200.0"
               promptText="Email"/>
    <TextField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="26.0" prefWidth="200.0"
               promptText="Password"/>

    <Label fx:id="errorText" textFill="RED"/>
    <Button onAction="#onLogInButtonClick" prefHeight="26.0" prefWidth="100.0" text="Log In"/>
    <Button onAction="#onCreateAccountClick" prefHeight="26.0" prefWidth="100.0" text="Create Account"/>
</VBox>