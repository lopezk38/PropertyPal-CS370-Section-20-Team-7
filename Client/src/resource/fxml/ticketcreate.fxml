<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.propertypal.client.TicketCreateController">

    <Button fx:id="backBtn" layoutX="20" layoutY="20" onAction="#onBackBtnClick" prefHeight="30" prefWidth="70" text="Back" />

    <VBox alignment="CENTER" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="60">

        <Text text="Ticket Create">
            <font><Font size="20.0" /></font>
        </Text>

        <Region prefHeight="30" />

    </VBox>

    <Button fx:id="submitBtn" layoutX="241.0" layoutY="356.0" onAction="#onSubmitBtnClick" prefHeight="30.0" prefWidth="119.0" style="-fx-font-size: 12px;" text="Submit Ticket" />

    <TextField fx:id="titleField" layoutX="55.0" layoutY="117.0" prefHeight="25.0" prefWidth="490.0" promptText="Ticket Title" />

    <TextArea fx:id="descriptionField" layoutX="55.0" layoutY="159.0" prefHeight="177.0" prefWidth="490.0" promptText="Describe the issue..." />

</AnchorPane>
