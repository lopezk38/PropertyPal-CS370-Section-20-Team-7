    <Button fx:id="backBtn" layoutX="20" layoutY="20" onAction="#onBackButtonClick" prefHeight="30" prefWidth="70" text="Back" />

    <VBox alignment="CENTER" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="60">

        <Text text="Ticket Manager">
            <font><Font size="20.0" /></font>
        </Text>

        <Region prefHeight="30" />
    </VBox>

    <Label fx:id="ticketCountLabel" layoutX="225.0" layoutY="135.0" style="-fx-font-size: 14px;" text="You have 0 open tickets." />

    <Button fx:id="reviewBtn" layoutX="228.0" layoutY="285.0" onAction="#onReviewButtonClick" prefHeight="40" prefWidth="144.0" style="-fx-font-size: 12px;" text="Review Open Tickets" />
</AnchorPane>
