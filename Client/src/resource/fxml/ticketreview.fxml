<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.propertypal.client.TicketReviewController">

    <Button fx:id="backBtn" layoutX="20" layoutY="20" onAction="#onBackBtnClick" prefHeight="30" prefWidth="70" text="Back" />

    <VBox alignment="CENTER" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="60">

        <Text text="Ticket Review">
            <font><Font size="20.0" /></font>
        </Text>

        <Region prefHeight="25" />
    </VBox>

    <Label fx:id="ticketTitle" layoutX="57" layoutY="120" style="-fx-font-size: 14px;" text="Ticket Title" />

    <Label fx:id="ticketDate" layoutX="57" layoutY="140" style="-fx-font-size: 14px;" text="Ticket date:" />

    <TextArea fx:id="ticketDescription" layoutX="56" layoutY="163" prefHeight="157" prefWidth="490" />

    <Button fx:id="closeBtn" layoutX="242.0" layoutY="347.0" onAction="#onCloseBtnClick" prefHeight="30" prefWidth="119" style="-fx-font-size: 12px;" text="Close Ticket" />

</AnchorPane>
