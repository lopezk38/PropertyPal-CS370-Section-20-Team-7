<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.propertypal.client.TicketReviewLandlordController">

    <Button fx:id="backBtn" layoutX="20" layoutY="20" onAction="#onBackBtnClick" prefHeight="30" prefWidth="70" text="Back" />

    <VBox alignment="CENTER" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="60">

        <Text text="Ticket Review">
            <font><Font size="20.0" /></font>
        </Text>

        <Region prefHeight="30" />
    </VBox>

    <Label fx:id="ticketTitle" layoutX="57.0" layoutY="120.0" style="-fx-font-size: 14px;" text="Ticket Title" />

    <Label fx:id="ticketDate" layoutX="57.0" layoutY="140.0" style="-fx-font-size: 14px;" text="Ticket Date" />

    <TextArea fx:id="ticketDescription" layoutX="56.0" layoutY="163.0" prefHeight="157.0" prefWidth="490.0" wrapText="true" />

    <Button fx:id="closeBtn" layoutX="242.0" layoutY="348.0" onAction="#onCloseBtnClick" prefHeight="30.0" prefWidth="119.0" style="-fx-font-size: 12px;" text="Close Ticket" />

</AnchorPane>
